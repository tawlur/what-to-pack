<%- include('../partials/header') %>

<table id="list">

  <tbody>
    <li>
      Welcome to the Inventory Page. 
    </li>
    <form class="indexForm" id="new-item-form" action="/items" method="POST">
      <label>Name:</label>
      <input type="text" name="name" />
      <label>Weight:</label>
      <input type="number" name="weight" />
      <label>Category:</label>
      <select name="category">
        <option value="campGear">Camp Gear</option>
        <option value="tool">Tool</option>
        <option value="consumable">Consumable</option>
        <option value="personalItem">Personal Items</option>
        <option value="morale">Morale</option>

      </select>
      <label>In Posession:</label>
      <input type="checkbox" name="In Posession" checked />
      <input type="submit" value="Add Item" />
    </form>

  </tbody>
</table>

<table>
  <thead>
    <th class="inventoryTable">Name</th>
    <th class="inventoryTable">category</th>
    <th class="inventoryTable">weight</th>
    <th class="inventoryTable">delete</th>
  </thead>
  <tbody>
    <% items.forEach(function(i) { %>
    <td class="inventoryTable"><%= i.name %></td>
    <td class="inventoryTable"><%= i.category %></td>
    <td class="inventoryTable"><%= i.weight %></td>
    
    <% }); %>
    
  </tbody>

</table>



<table>
  <thead class="tripTable">
    <th>Location</th>
    <th>Date</th>
    <th>Items</th>

  </thead>

  <tbody class="tripTable">
    <% trips.forEach(function(i) { %>
    <td><%= i.location %></td>
    <td><%= i.date %></td>
  </tbody>

  <% }); %>
</table>


<% items.forEach(function(eachItem) { %>
  <form id="delete-item-form" action="/items/<%= eachItem._id %>?_method=DELETE" method="POST" style="display: inline;">
    <input type="submit" value="DELETE" />
  </form>
  <% }) %>